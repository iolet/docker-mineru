[Unit]
Description=MinerU pdf to markdown convertor

[Service]
Environment=PYTHONUNBUFFERED=1
WorkingDirectory=%h/.local/webapps/mineru-pdf
ExecStart=%h/miniconda3/envs/mineru3/bin/celery \
    --app src.mineru_pdf.celery.app \
    worker \
    --concurrency 1 \
    --time-limit 1800 \
    --soft-time-limit 1500 \
    --max-tasks-per-child 10 \
    --loglevel INFO \
    --detach
Restart=always
RestartSec=10
KillMode=mixed
Type=forking

[Install]
WantedBy=multi-user.target default.target
